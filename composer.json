{
  "name": "acme/dual-chatbot-plugin",
  "type": "project",
  "require-dev": {
    "brain/monkey": "^2.6",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpstan/phpstan": "^1.11",
    "phpunit/phpunit": "^9.6",
    "squizlabs/php_codesniffer": "^3.10",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "wp-coding-standards/wpcs": "^3.2",
    "yoast/phpunit-polyfills": "^2.0"
  },
  "autoload-dev": {
    "psr-4": {
      "DualChatbot\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit -c tests/phpunit.xml.dist",
    "lint": "./vendor/bin/phpcs -q",
    "phpcs": "./vendor/bin/phpcs --standard=phpcs.xml.dist -p",
    "phpstan": "./vendor/bin/phpstan analyse --memory-limit=512M",
    "post-install-cmd": [
      "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs || true"
    ],
    "post-update-cmd": [
      "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs || true"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "sort-packages": true
  }
}
