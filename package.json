{
  "name": "dual-chatbot-plugin",
  "private": true,
  "type": "module",
  "scripts": {
    "build:css": "postcss assets/css/chatbot.css -o assets/css/chatbot.min.css",
    "build": "npm run build:js && npm run build:css",
    "build:watch": "rollup -c -w",
    "build:js": "rollup -c",
    "prebuild:plugin": "node scripts/sync-version.js",
    "build:plugin": "npm run build && node scripts/build.js && node scripts/verify-zip.js",
    "test": "vitest run",
    "lint:js": "eslint assets/js --ext .js"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.7",
    "@rollup/plugin-terser": "^0.4.4",
    "adm-zip": "^0.5.16",
    "archiver": "^6.0.2",
    "cssnano": "^6.1.2",
    "eslint": "^9.11.0",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "rollup": "^4.22.4",
    "vitest": "^2.1.3"
  },
  "version": "1.0.0",
  "description": "WordPress plugin with dual chatbot system (FAQ + member advisory)",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "corepack": "^0.34.0",
    "npm": "^10.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KI-Kraft/dual-chatbot-plugin.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/KI-Kraft/dual-chatbot-plugin/issues"
  },
  "homepage": "https://github.com/KI-Kraft/dual-chatbot-plugin#readme"
}
